   
<header class='header'>
      <a href="#test">
          {{> logo}}
      </a>
          <nav class='header_nav'>
          <div class="header_nav_right">
            {{> nav list=header}}
          </div>          
          </nav>          
</header>



<main class="main">
  <div class="info">
    {{#with info}}
    <h1 class="info_title">{{title}}</h1>
    <p class="info_text">{{description}}</p>
    {{/with}}
  </div>
  {{#with form}}
  <form class="form">
    <h2 class="form_title">{{title}}</h2>
    <div class="form_input_list">
      {{#each inputs}}
      <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input-1{{id}}" />
      {{/each}}
    </div>
    <div class="form_checkbox">
     
      <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
       <div></div>
      <label for="{{checkbox.name}}">{{checkbox.label}}</label>
    </div>
    <button type="submit" class="form_button">{{button}}</button>
    {{> divider}}
    <p class="form_info">{{info}}</p>
  </form>
  {{/with}}
</main>

<section class="updates">
  {{#with updates}}
  <h2 class="updates_title">{{title}}</h2>
  <div class="updates_list">
    {{#each list}}
     <div class="list_description">
        <img src="https://picsum.photos/64/64" alt="Update image" class="updates_image">  
          <div>
            <h6 class="list_nickname">{{nickname}}</h6>
            <p class="list_text">{{description}}</p>
          </div>          
      </div> 
    {{/each}}
  </div>
  {{#with show_all}}
  <a class="show_all" href="{{url}}">{{text}}</a>
  {{/with}}
  {{/with}}
</section>


    <div class="expirience">
      {{#with expirience}}
      <div class="expirience_badge">
          <span>{{badge}}</span>
      </div>    
      <div>
        <h3 class="expirience_title">{{title}}</h3>
            
     
            <div class="expirience_list">
              {{#each list}}
                <div class="list_content">
                  <strong>{{name}}</strong>
                  <p>{{details}}</p>
                </div>
              {{/each}}
            </div>
       </div>
      {{/with}}
    </div>
        
<footer class="footer" id="test">
  <div>
     {{> logo}}
      <span class="footer_copyright">Copyright 2023-2024</span>
  </div>
      {{#each footer}}
        <div >
        <span class="footer_title">{{title}}</span>
            {{> nav list=links isVertical=true}}
        </div>
      {{/each}}        
</footer>

